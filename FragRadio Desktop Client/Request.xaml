<Window x:Class="FragRadio_Desktop_Client.Request"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Request" Height="182" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="117*"/>
        </Grid.ColumnDefinitions>
        <RichTextBox x:Name="RequestBox" HorizontalAlignment="Left" Height="111" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Enter your request here"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Submit" Grid.Column="1" HorizontalAlignment="Left" Margin="32,121,0,0" VerticalAlignment="Top" Width="75" Height="31" Click="Button_Click"/>

    </Grid>
</Window>
